datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Product {
  id            String   @id @default(uuid())
  name          String
  description   String?
  price         Float
  imageUrl      String?
  category      String?
  stockQuantity Int
  sku           String   @unique
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Order {
  id        String   @id @default(cuid())
  userId    String
  products  Json
  total     Float
  status    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  USER
  ADMIN
}
